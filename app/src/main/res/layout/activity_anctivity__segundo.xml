<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/winter"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/activity_segundo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1º Reto"
            android:textAlignment="center"
            android:textSize="50sp"
            android:fontFamily="cursive"
            android:textColor="#FFFF4081"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:text="1. Consigue un árbol, ya sea real o artificial, grande o pequeño.
     2. Ponle adornos o también puedes construirlos a tu elección, recuerda lo importante es hacerlo en familia."
            android:textSize="23sp"
            android:textColor="#f1f102"
            android:gravity="center"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:src="@drawable/arbol"
                android:id="@+id/imageView" />

            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hecho"
                android:layout_marginTop="300dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
