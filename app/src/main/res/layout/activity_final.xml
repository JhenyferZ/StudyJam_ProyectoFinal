<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/winter"
    android:id="@+id/activity_final">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lo lograste"
            android:textAlignment="center"
            android:textSize="50sp"
            android:fontFamily="cursive"
            android:textColor="#FFFF4081"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:text="Recuerda que en la vida tenemos que disfrutar todos y cada uno de los momentos con los seres queridos. Espero hayas disfrutado todos los retos lanzados y que hayas cumplido muchos mas.
Feliz navidad"
            android:textSize="23sp"
            android:textColor="#f1f102"
            android:gravity="center"
            android:fontFamily="cursive"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="250dp"
                android:layout_height="350dp"
                android:src="@drawable/olav"
                android:layout_marginTop="10dp"
                />
            <Button
                android:id="@+id/btnTerminar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terminar"
                android:layout_marginTop="150dp"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
